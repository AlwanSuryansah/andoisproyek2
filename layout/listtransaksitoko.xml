<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cardview"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/noTransaksiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/noTransaksiValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <View
            android:id="@+id/view2"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:background="@color/cardview_dark_background"
            android:layout_height="1dp"
            android:layout_below="@id/noTransaksiText"/>

        <GridLayout
            android:id="@+id/grid1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_below="@+id/view2">

            <TextView
                android:id="@+id/jumlahText"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_row="1"
                android:text="jumlah transaksi "/>

            <TextView
                android:id="@+id/jumlahValue"
                android:layout_column="3"
                android:layout_gravity="start"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/namatokoText"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_row="3"
                android:text="Nama Toko "/>

            <TextView
                android:id="@+id/namatokoValue"
                android:layout_column="3"
                android:layout_gravity="start"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/idpelangganText"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_row="5"
                android:text="id pelanggan"/>

            <TextView
                android:id="@+id/idpelangganValue"
                android:layout_column="3"
                android:layout_gravity="start"
                android:layout_row="5"/>
            <Space
                android:layout_width="101dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4" />



        </GridLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>