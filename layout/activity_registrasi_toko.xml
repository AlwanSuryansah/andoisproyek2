<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registrasiToko">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Form Registrasi Toko"
        android:padding="15dp"/>


    <EditText
        android:id="@+id/id_toko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Id Toko"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/nama_yoko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Nama toko"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/alamattoko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Alamat Toko"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/jenistoko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Jenis toko"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Username"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Password"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/saldotoko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Saldo Toko"
        android:text="0"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="12dp"
        android:padding="8dp"
        android:hint="Status"
        android:maxLines="1"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/regis"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="kirim"/>

        <Button
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="batal"/>
    </LinearLayout>

</LinearLayout>