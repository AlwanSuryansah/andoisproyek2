<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".datatoko"
    android:padding="12dp"
    android:stretchColumns="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Selamat Datang di Payment BarcodeQR"
        android:padding="15dp"/>

    <TableRow
        android:background="#22ff">

        <TextView
            android:text="id Toko"
            android:width="150dp"
            android:padding="15dip">

        </TextView>
        <TextView
            android:id="@+id/idtokovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>

    <TableRow
        android:background="#22ff">

        <TextView
            android:text="Nama Toko"
            android:width="150dp"
            android:padding="15dip">

        </TextView>
        <EditText
            android:id="@+id/namatokovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>

    <TableRow
        android:background="#22ff">

        <TextView
            android:text="Alamat Toko"
            android:width="150dp"
            android:padding="15dip">

        </TextView>
        <EditText
            android:id="@+id/alamattokovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>

    <TableRow
        android:background="#22ff">
        <TextView
            android:text="jenis Toko"
            android:width="150dp"
            android:padding="15dip" />
        <EditText
            android:id="@+id/jenistokovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>

    <TableRow
        android:background="#22ff">
        <TextView
            android:text="Username"
            android:width="150dp"
            android:padding="15dip" />
        <EditText
            android:id="@+id/usernametokovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>

    <TableRow
        android:background="#22ff">
        <TextView
            android:text="Password"
            android:width="150dp"
            android:padding="15dip" />
        <EditText
            android:id="@+id/passwordtokovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>

    <TableRow
        android:background="#22ff">
        <TextView
            android:text="Saldo"
            android:width="150dp"
            android:padding="15dip" />
        <TextView
            android:id="@+id/saldototkovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>

    <TableRow
        android:background="#22ff">
        <TextView
            android:text="status"
            android:width="150dp"
            android:padding="15dip" />
        <EditText
            android:id="@+id/statustokovalue"
            android:layout_column="1"
            android:padding="15dip" />
    </TableRow>


    <Button
        android:id="@+id/edittoko"
        android:text="Edit"
        android:height="15dp"
        android:width="100dp"
        android:padding="15dip"/>
</TableLayout>